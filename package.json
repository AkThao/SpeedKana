{
    "name": "speedkana",
    "version": "0.1.0",
    "description": "An app that uses a flashcard-based system to train Kana recognition and reading speed.",
    "scripts": {
        "client": "cd client && npm run start",
        "server": "nodemon server/server.js",
        "dev": "concurrently --kill-others-on-fail \"npm run client\" \"npm run server\""
    },
    "dependencies": {
        "body-parser": "^1.18.3",
        "express": "4.18.1"
    },
    "devDependencies": {
        "concurrently": "^3.3.0",
        "nodemon": "^2.0.4"
    }
}